bool IsTradeTime()
{
   int currentHour = Hour();

   if(StartHour < EndHour)
   {
      return (currentHour >= StartHour && currentHour < EndHour);
   }
   else  // ìì •ì„ ë„˜ì–´ê°€ëŠ” ê²½ìš° (ì˜ˆ: 22ì‹œ~2ì‹œ)
   {
      return (currentHour >= StartHour || currentHour < EndHour);
   }
}

