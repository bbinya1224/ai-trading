//+------------------------------------------------------------------+
//| Expert tick function                                              |
//| ìƒˆë¡œìš´ í‹±(ê°€ê²© ë³€ë™)ì´ ì˜¬ ë•Œë§ˆë‹¤ ì‹¤í–‰ë©ë‹ˆë‹¤ - EAì˜ í•µì‹¬ ë¡œì§       |
//+------------------------------------------------------------------+
void OnTick()
{
   // ìƒˆë¡œìš´ ë°”ê°€ í˜•ì„±ë˜ì—ˆëŠ”ì§€ í™•ì¸ (ì¤‘ë³µ ì‹ í˜¸ ë°©ì§€)
   if(Bars == LastBars)
      return;
   LastBars = Bars;

   // ì´ë™í‰ê· ì„  ê³„ì‚°
   CalculateMovingAverages();

   // ì°¨íŠ¸ì— ì •ë³´ í‘œì‹œ
   if(ShowInfo)
      DisplayInfo();

   // ê±°ë˜ ì‹œê°„ í•„í„° í™•ì¸
   if(UseTimeFilter && !IsTradeTime())
   {
      return;
   }

   // í˜„ì¬ í¬ì§€ì…˜ í™•ì¸
   int positionType = GetCurrentPosition();

   // ê³¨ë“ í¬ë¡œìŠ¤ í™•ì¸ (ë§¤ìˆ˜ ì‹ í˜¸)
   if(IsGoldenCross() && positionType != OP_BUY)
   {
      // ê¸°ì¡´ ë§¤ë„ í¬ì§€ì…˜ì´ ìˆë‹¤ë©´ ì²­ì‚°
      if(positionType == OP_SELL)
         CloseAllPositions();

      // ë§¤ìˆ˜ ì§„ì…
      OpenBuyOrder();
   }

   // ë°ë“œí¬ë¡œìŠ¤ í™•ì¸ (ë§¤ë„ ì‹ í˜¸)
   else if(IsDeadCross() && positionType != OP_SELL)
   {
      // ê¸°ì¡´ ë§¤ìˆ˜ í¬ì§€ì…˜ì´ ìˆë‹¤ë©´ ì²­ì‚°
      if(positionType == OP_BUY)
         CloseAllPositions();

      // ë§¤ë„ ì§„ì…
      OpenSellOrder();
   }

   // ì¶”ì  ì†ì ˆ ê´€ë¦¬
   if(UseTrailingStop)
      ManageTrailingStop();
}

//+------------------------------------------------------------------+
//| ì´ë™í‰ê· ì„  ê³„ì‚° í•¨ìˆ˜                                               |
//| iMA í•¨ìˆ˜ë¥¼ ì‚¬ìš©í•˜ì—¬ ë‹¨ê¸°/ì¥ê¸° ì´ë™í‰ê· ì„ ê³„ì‚°í•©ë‹ˆë‹¤                 |
//+------------------------------------------------------------------+
void CalculateMovingAverages()
{
   // ì´ì „ ê°’ ì €ì¥
   PrevFastMA = CurrentFastMA;
   PrevSlowMA = CurrentSlowMA;

   // í˜„ì¬ ê°’ ê³„ì‚° (ì¸ë±ìŠ¤ 1 = ì§ì „ ì™„ì„±ëœ ë´‰)
   CurrentFastMA = iMA(Symbol(), 0, FastMA_Period, 0, MA_Method, MA_Price, 1);
   CurrentSlowMA = iMA(Symbol(), 0, SlowMA_Period, 0, MA_Method, MA_Price, 1);
}

//+------------------------------------------------------------------+
//| ê³¨ë“ í¬ë¡œìŠ¤ í™•ì¸ í•¨ìˆ˜                                               |
//| ë‹¨ê¸° MAê°€ ì¥ê¸° MAë¥¼ ìƒí–¥ ëŒíŒŒí–ˆëŠ”ì§€ í™•ì¸                           |
//+------------------------------------------------------------------+
bool IsGoldenCross()
{
   // ì´ì „ ë´‰ì—ì„œëŠ” ë‹¨ê¸° < ì¥ê¸°, í˜„ì¬ ë´‰ì—ì„œëŠ” ë‹¨ê¸° > ì¥ê¸°
   bool crossOccurred = (PrevFastMA < PrevSlowMA) && (CurrentFastMA > CurrentSlowMA);

   // íŠ¸ë Œë“œ í•„í„° ì ìš© (MA ê°„ê²©ì´ ì¶©ë¶„í•œì§€ í™•ì¸)
   if(UseTrendFilter && MinMAGap_Points > 0)
   {
      double gap = (CurrentFastMA - CurrentSlowMA) / Point;
      if(gap < MinMAGap_Points)
         return false;
   }

   return crossOccurred;
}

//+------------------------------------------------------------------+
//| ë°ë“œí¬ë¡œìŠ¤ í™•ì¸ í•¨ìˆ˜                                               |
//| ë‹¨ê¸° MAê°€ ì¥ê¸° MAë¥¼ í•˜í–¥ ëŒíŒŒí–ˆëŠ”ì§€ í™•ì¸                           |
//+------------------------------------------------------------------+
bool IsDeadCross()
{
   // ì´ì „ ë´‰ì—ì„œëŠ” ë‹¨ê¸° > ì¥ê¸°, í˜„ì¬ ë´‰ì—ì„œëŠ” ë‹¨ê¸° < ì¥ê¸°
   bool crossOccurred = (PrevFastMA > PrevSlowMA) && (CurrentFastMA < CurrentSlowMA);

   // íŠ¸ë Œë“œ í•„í„° ì ìš©
   if(UseTrendFilter && MinMAGap_Points > 0)
   {
      double gap = (CurrentSlowMA - CurrentFastMA) / Point;
      if(gap < MinMAGap_Points)
         return false;
   }

   return crossOccurred;
}

